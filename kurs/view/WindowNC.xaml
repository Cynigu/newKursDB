<Window x:Class="kurs.view.WindowNP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kurs.view"
        mc:Ignorable="d"
        Title="Номенклатурные позиции" Height="400" Width="950" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="199*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="22*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="173*"/>
            <ColumnDefinition Width="173*"/>
            <ColumnDefinition Width="170*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="21*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="TheDataGrid"  ItemsSource ="{Binding Path=DT, Mode=TwoWay}"
                  AutoGenerateColumns="False" SelectedItem="{Binding SelectedRow}"
                  CanUserDeleteRows="False" CanUserAddRows="False" IsReadOnly="True"
                  Grid.Column="1"  Grid.Row="2" Grid.RowSpan="3" Grid.ColumnSpan="3">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding id_НП}"/>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Наименование}"/>
                <DataGridTextColumn Header="Ед. изм." Binding="{Binding Ед_изм}" />
                <DataGridTextColumn Header="Метод возобновления" Binding="{Binding Метод_возобновления}" />
                <DataGridTextColumn Header="Метод списания" Binding="{Binding Метод_списания}" />
                <DataGridTextColumn Header="Точка доказа" Binding="{Binding Точка_доказа}" />
                <DataGridTextColumn Header="Кол-во для доказа" Binding="{Binding Кол-во_для_доказа}" />
                <DataGridTextColumn Header="Период ожидания" Binding="{Binding Период_ожидания}" />
                <DataGridTextColumn Header="Маршрут" Binding="{Binding Маршрут}" />
                <DataGridTextColumn Header="Спецификация" Binding="{Binding Спецификация}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Command="{Binding EditCommand}"
                Visibility="{Binding Visibility}"
            Content="Редактировать" HorizontalAlignment="Left" Grid.Row="5" VerticalAlignment="Center" Width="134" Grid.Column="1"/>
        <Button Command="{Binding AddCommand}" Visibility="{Binding Visibility}"
            Content="Добавить" Grid.Column="1" HorizontalAlignment="Right" Grid.Row="5" VerticalAlignment="Center" Width="75"/>
        <Button Command="{Binding DeleteRowCommand}" Visibility="{Binding Visibility}"
            Content="Удалить" Grid.Column="3" HorizontalAlignment="Right" Grid.Row="5" VerticalAlignment="Center" Width="75" Height="18"/>
        <Button Command="{Binding CancelChangeCommand}"
            Content="Отменить" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="75"/>
        <Button Command="{Binding UpdateCommand}"
            Content="Сохранить" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Width="75"/>
    </Grid>
</Window>
